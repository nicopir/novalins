<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <% if @project.status != nil %>
    <div class="field">
      <strong>Status:</strong>
      <%= @project.status %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :instruction %><br>
    <%= f.text_area :instruction %>
  </div>
  <div class="field">
    <%= f.label :urgency %><br>
    <%= f.label :urgency, "Low", :value => "Low"  %>
    <%= f.radio_button :urgency, "Low" %>
    
    <%= f.label :urgency, "Middle", :value => "Middle"  %>
    <%= f.radio_button :urgency, "Middle", :checked => true %>
    
    <%= f.label :urgency, "High", :value => "High"  %>
    <%= f.radio_button :urgency, "High" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
